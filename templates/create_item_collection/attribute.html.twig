{% extends 'main/base.html.twig' %}

{% block body %}

    <div class="container">
        {% if app.user %}
            <h3 class="mb-3">{{ 'Create attribute'|trans }} â„–{{ number_of_attribute }} {{ 'for collection'|trans }} {{ collection_name }}</h3>

            {{ form_start(createItemCollectionAttributeForm) }}
            {{ form_errors(createItemCollectionAttributeForm) }}
