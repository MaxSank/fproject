{% extends 'main/base.html.twig' %}

{% block title %}Authorisation Form{% endblock %}

{% block body %}
<div class="container">

    <h3 class="mb-3">Authorisation Form</h3>

    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                You are logged in as {{ app.user.name }}, <a href="{{ path('app_logout') }}">Logout</a>
            </div>
        {% endif %}

        <div class="mb-3">
            <label for="inputUsername" class="form-label required">Enter name:</label>
            <input type="text" value="{{ last_username }}" name="name" id="inputUsername" class="form-control" autocomplete="name" required autofocus>
        </div>
        <div class="mb-3">
            <label for="inputPassword" class="form-label required">Enter password:</label>
            <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
        </div>

        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}"
        >

        {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Remember me
                </label>
            </div>
        #}

        <button class="btn btn-lg btn-primary" type="submit">
            Sign in to your account
        </button>
    </form>
</div>
{% endblock %}
