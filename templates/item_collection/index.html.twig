{% extends 'main/base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}

{% endblock stylesheets %}

{% block javascripts %}
    {{ parent() }}

{% endblock javascripts %}

{% block body %}
    <div style="display: block">
        <h3 class="d-inline p-1">{{ 'Collection'|trans }} {{ collection_name }} {{ 'of user'|trans }} {{ owner_name }}</h3>
        {% if app.user %}
            {% if owner_id == app.user.id or is_granted('ROLE_ADMIN') %}
                <a href="{{ path('edit_item_collection', {id: collection_id, name: owner_name}) }}" class="d-inline p-1">{{ 'Edit'|trans }}</a>
                <a href="{{ path('delete_item_collection', {id: collection_id}) }}" class="d-inline p-1">{{ 'Delete'|trans }}</a>
            {% endif %}
        {% endif %}
    </div>

    <div>
    {% if app.user %}
        {% if owner_id == app.user.id or is_granted('ROLE_ADMIN') %}
            <a type="button" class="btn btn-outline-primary mt-1" href="{{ path('create_item', {name: owner_name, id: collection_id}) }}">{{ 'Create item'|trans }}</a>
        {% endif %}
    {% endif %}

    <a type="button" class="btn btn-outline-primary mt-1" href="{{ path('user', {name: owner_name}) }}">{{ 'Back to personal page'|trans }}</a>
    </div>
    <hr>

    <div >
        {% if items %}
        <table class="table table-striped" style="table-layout: fixed">
        <thead>
        <tr>
            <th>{{ 'Item'|trans }}</th>
            {% set base_attributes = (items|first).itemCollection.itemCollectionAttributes %}
            {% for single_base_attribute in base_attributes %}
            <th>{{ single_base_attribute.name }}</th>
            {% endfor %}
            <th>{{ 'Created'|trans }}</th>
            <th>{{ 'Updated'|trans }}</th>
            {% if app.user %}
                {% if owner_id == app.user.id or is_granted('ROLE_ADMIN') %}
                    <th>{{ 'Edit'|trans }}</th>
                    <th>{{ 'Delete'|trans }}</th>
                {% endif %}
            {% endif %}
        </tr>
        </thead>
        {% for single_item in items %}
            <tr>
                <td><a href="{{ path('item', {name: owner_name, collection: collection_id, item: single_item.id}) }}" class="d-inline p-1">{{ single_item.name }}</a></td>
                {% set attributes = single_item.itemAttributes %}
                {% for single_attribute in attributes %}
                <td>{{ single_attribute.value }}</td>
                {% endfor %}
                <td>{{ single_item.createdat|date('Y-m-d H:i') }}</td>
                <td>{{ single_item.updatedat|date('Y-m-d H:i') }}</td>
                {% if app.user %}
                    {% if owner_id == app.user.id or is_granted('ROLE_ADMIN') %}
                        <td><a href="{{ path('edit_item', {name: owner_name, collection: collection_id, item: single_item.id}) }}" class="d-inline p-1">{{ 'Edit'|trans }}</a></td>
                        <td></td>
                    {% endif %}
                {% endif %}
            </tr>
        {% endfor %}
        </table>
        {% else %}
            {{ 'No items.'|trans }}
        {% endif %}
    </div>


{% endblock %}